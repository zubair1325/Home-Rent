<% layout("/layouts/boilerplate") %>
<style>

  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-top: 2rem;
    opacity: 0.8;
    transition: opacity ease-in-out 0.1s;
  }
  .filter:hover {
    cursor: pointer;
    opacity: 1;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flexbox;
    align-items: center;
    justify-content: center;
  }
   .md-screen-none{
      display:flex;
    }
    @media (max-width: 768px) {
    
    .md-screen-none{
      display: none;
    }
  }
</style>
<body>
  <div class="filters text-center md-screen-none" id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
