  </div>

  <div class="row index-row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3 ">
    <% for(let l of allLesting){ %>
    <a href="/listings/<%= l._id %>">
      <div class="card listing-card  mt-3">
        <img
          src="<%= l.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">
          <p class="badge bg-primary"><%= l.location %></p>
        </div>
        <div class="card-body text-center mt-3">
          <p class="card-text">
            <b><%= l.title %></b><br />
            <strong
              >Tk <%= l.price.toLocaleString("en-BD") %> / night
            </strong>
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

